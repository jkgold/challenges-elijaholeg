function wordSwitch(){
  var str = "this is fun, hopefully.";
  var splitter = str.split(/\b/);
  var reverser = splitter.map(function(element){
    if(/\w/.test(element))
    {return element.split("").reverse().join("");
}
else {
  return element;}
});
console.log(reverser.join(""));
}
wordSwitch();
